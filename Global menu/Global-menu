" > $HOME'/zorin-desktop/zorin-wm-keybindings.ini'
dconf load / < $HOME'/zorin-desktop/zorin-wm-keybindings.ini'
rm -f $HOME'/zorin-desktop/zorin-wm-keybindings.ini'

echo "[org/gnome/settings-daemon/plugins/media-keys]
